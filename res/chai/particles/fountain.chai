def fountain_update(p,delta) {
    p.life = p.life - (delta*p.decay);
    var pos = p.getPosition();
    pos.x += p.vector.x * delta;
    //pos.y = pos.y + p.vector.y * delta;
    p.setPosition(pos);
    var c = p.getColor();
    //c.a = p.life;
    p.setColor(c);
    p.rotation = p.rotation + (p.vectorRot * delta);
}

def fountain_renew(p) {
    p.life = rand(1,100);
    p.decay = rand(1,10);
    p.vector.x = rand(-5,5);
    p.vector.y = rand(0,20);
}